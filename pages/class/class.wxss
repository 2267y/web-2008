.main{
  width:100%;
  height: 100%;
}
.categroy-left{
  float: left;
  width: 150rpx;
  height: 100%;
  position: fixed;

  overflow-y: auto;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}
.categroy-left .cate-list{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}
.categroy-left .cate-list.active{
  color: #6CB92D;
  border-color: #6CB92D;
}
.categroy-right{
  float: right;
  width: 600rpx;
  height: 100%;
}
.cate-box{
  height: 100%;
  padding:40rpx;
  box-sizing: border-box;
}
.cate-title{
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding:30rpx 0 55rpx;
  text-align: center;
  
  font-size: 28rpx;
}
